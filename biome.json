{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**", "!src/routeTree.gen.ts", "!convex/_generated"]
	},
	"formatter": {
		"enabled": false
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	}
}
