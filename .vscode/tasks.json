{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "dev",
			"dependsOn": ["tsc: watch", "dev:convex", "dev:web"],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev:web",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:web"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "dev:convex",
			"type": "shell",
			"command": "bun",
			"args": ["run", "dev:convex"],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "tsc: watch",
			"type": "shell",
			"command": "bun",
			"args": ["tsc", "-b", "--watch"],
			"problemMatcher": ["$tsc-watch"],
			"isBackground": true
		}
	]
}
